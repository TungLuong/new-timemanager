<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/shape_item_day"
            android:id="@+id/relative_layout_A"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_margin="1dp">
            <ImageView
                android:layout_margin="9dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:id="@+id/relative_layout_B"
            android:layout_toRightOf="@id/relative_layout_A"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_view_B"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="784dp"
                    android:layout_height="56dp"
                    android:orientation="horizontal">
                    <TextView
                        android:background="@drawable/shape_item_day"
                        android:padding="1dp"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="Chủ nhật"
                        android:textColor="#FFF"
                        android:textSize="20dp" />

                    <TextView
                        android:background="@drawable/shape_item_day"
                        android:padding="1dp"
                        android:textColor="#FFF"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="Thứ 2"
                        android:textSize="20dp" />
                    <TextView
                        android:background="@drawable/shape_item_day"
                        android:padding="1dp"
                        android:textColor="#FFF"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="Thứ 3"
                        android:textSize="20dp" />

                    <TextView
                        android:background="@drawable/shape_item_day"
                        android:padding="1dp"
                        android:textColor="#FFF"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="Thứ 4"
                        android:textSize="20dp" />

                    <TextView
                        android:background="@drawable/shape_item_day"
                        android:padding="1dp"
                        android:textColor="#FFF"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="Thứ 5"
                        android:textSize="20dp" />

                    <TextView
                        android:background="@drawable/shape_item_day"
                        android:padding="1dp"
                        android:textColor="#FFF"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="Thứ 6"
                        android:textSize="20dp" />

                    <TextView
                        android:background="@drawable/shape_item_day"
                        android:padding="1dp"
                        android:textColor="#FFF"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="Thứ 7"
                        android:textSize="20dp" />
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_layout_C"
            android:layout_below="@id/relative_layout_A"
            android:layout_width="72dp"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_layout_D"
            android:layout_below="@id/relative_layout_B"
            android:layout_toRightOf="@id/relative_layout_A"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <HorizontalScrollView
                android:layout_marginTop="2dp"
                android:id="@+id/horizontal_scroll_view_D"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_data"
                        android:layout_width="784dp"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </HorizontalScrollView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>