<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    android:background="@color/colorDefault">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/time"
        android:alpha="0.2"></RelativeLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_title_notifi"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/iv_notification"
        android:text="Tên sự kiện "
        android:maxLines="1"
        android:textAllCaps="true"/>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/tv_time_start"
        android:layout_below="@id/tv_title_notifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Thời gian bắt đầu :"/>
    <TextView
        android:id="@+id/tv_set_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_notifi"
        android:text="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_toRightOf="@id/tv_time_start"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian kết thúc :"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/tv_time_start"
        android:id="@+id/tv_time_finish"/>
    <TextView

        android:id="@+id/tv_set_time_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginTop="2dp"
        android:text="0"
        android:layout_below="@id/tv_set_time_start"
        android:layout_toRightOf="@id/tv_time_finish"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_latter"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_below="@id/tv_set_time_finish"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_button"
        android:textAllCaps="false"
        android:text="Để sau"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:text="Bắt đầu"
        android:textColor="#000"
        android:textAllCaps="false"
        android:id="@+id/btn_start"
        android:layout_marginRight="4dp"
        android:textSize="15sp"
        android:background="@drawable/background_button"
        android:layout_below="@id/tv_set_time_finish"
        android:layout_toLeftOf="@id/btn_latter"/>
    <Button
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_new_time_for_action"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_below="@id/tv_set_time_finish"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:background="@drawable/background_button"
        android:textAllCaps="false"
        android:text="Đặt lại lịch"
        />
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv_notification"
        android:layout_width="64dp"
        android:src="@drawable/ic_notificaition"
        android:layout_height="64dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>