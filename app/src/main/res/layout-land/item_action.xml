<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft = "10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp">
    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_free_time"
        android:alpha="0.1">
    </RelativeLayout>

    <ImageView
        android:padding="15dp"
        android:id="@+id/iv_img_action"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:src="@drawable/free_time"/>
    <TextView
        android:singleLine="true"
        android:id="@+id/tv_title"
        android:layout_toRightOf="@id/iv_img_action"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="No action"
        android:textSize="17dp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_toRightOf="@id/iv_img_action"
        android:layout_below="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text=" hourOfDay "
        android:textSize="15dp"
        android:textColor="#000"/>
    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_action_done"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_not_complete_24dp"
        android:layout_marginRight="62dp"
        android:layout_marginTop="42dp"/>

</RelativeLayout>